          (HEX-WINDOW (IL:MAINWINDOW MENU-WINDOW))
          (COMMAND (SECOND ITEM)))
         (IF (MEMBER KEY '(IL:MIDDLE IL:RIGHT))
             NIL
             (ECASE COMMAND
                 (:NEXT (NEXT-HEX-PAGE HEX-WINDOW))
                 (:REREAD 
                    (RESET-HEX-WINDOW HEX-WINDOW)
                    (NEXT-HEX-PAGE HEX-WINDOW))
                 (:EXIT (QUIT-HEX-WINDOW HEX-WINDOW))))))

